@model Comision.Service.Model.ModelProfile
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css"/>
<link href="~/content/assets/global/plugins/bootstrap-select/css/bootstrap-select-rtl.min.css" rel="stylesheet" type="text/css" />
<h3 class="page-title">
    پروفایل کاربر
    <small>پروفایل کاربر</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="index.html">پروفایل</a>
            <i class="fa fa-angle-left"></i>
        </li>
        <li>
            <span>نمایش</span>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption font-red-sunglo">
                    <i class="icon-settings font-red-sunglo"></i>
                    <span class="caption-subject bold uppercase"> ذخیره پروفایل</span>
                </div>
                <div class="actions">
                    <div class="btn-group">
                        <a class="btn btn-sm green dropdown-toggle" href="javascript:;" data-toggle="dropdown" aria-expanded="false">
                            رویداد
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="javascript:;">
                                    <i class="fa fa-pencil"></i> ذخیره
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body form">
                <form role="form" class="form-horizontal">
                    <div class="form-body">
                        <div class="tabbable-line">
                            <ul class="nav nav-tabs ">
                                <li class="active">
                                    <a href="#tab_15_1" data-toggle="tab" aria-expanded="true"> اطلاعات شخصی </a>
                                </li>
                                <li class="">
                                    <a href="#tab_15_2" data-toggle="tab" aria-expanded="false"> اطلاعات دانشجویی </a>
                                </li>
                                <li>
                                    <a href="#tab_15_3" data-toggle="tab"> اطلاعات پرسنلی </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_15_1">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">نام</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="نام خود را بنویسید">
                                            </div>
                                        </div>
                                        <label class="col-md-2 control-label">نام خانوادگی</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="نام خانوادگی خود را بنویسید">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">کد ملی</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                        <label class="col-md-2 control-label">شماره شناسنامه</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">تاریخ تولد</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                        <label class="col-md-2 control-label">موبایل</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">تلفن</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                        <label class="col-md-2 control-label">جنسیت</label>
                                        <div class="col-md-4">
                                            <div class="input-group">
                                                <div class="icheck-inline">
                                                    <label>
                                                        <input type="radio" name="radio2" class="icheck"> مرد
                                                    </label>
                                                    <label>
                                                        <input type="radio" name="radio2" checked="" class="icheck"> زن
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">توضیحات</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                        <label class="col-md-2 control-label">عکس کاربر</label>
                                        <div class="col-md-4">
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                    <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="">
                                                </div>
                                                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 10px;"></div>
                                                <div>
                                                    <span class="btn default btn-file">
                                                        <span class="fileinput-new"> Select image </span>
                                                        <span class="fileinput-exists"> Change </span>
                                                        <input type="hidden" value="" name="..."><input type="file" name="">
                                                    </span>
                                                    <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab_15_2">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">شماره دانشجویی</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                        <label class="col-md-2 control-label">سال ورود تحصیلی</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">نیمسال ورود</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                        <label class="col-md-2 control-label">مقطع تحصیلی</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">گروه آموزشی</label>
                                        <div class="col-md-4">
                                            <select class="bs-select form-control" data-live-search="true" data-size="8">
                                                <option value="AF">کامپیوتر</option>
                                                <option value="AL">عمران</option>
                                                <option value="DZ">الکترونیک</option>
                                                <option value="AS">معماری</option>
                                            </select>
                                        </div>
                                        <label class="col-md-2 control-label">رشته تحصیلی</label>
                                        <div class="col-md-4">
                                            <select class="bs-select form-control" data-live-search="true" data-size="8">
                                                <option value="AF">کامپیوتر</option>
                                                <option value="AL">عمران</option>
                                                <option value="DZ">الکترونیک</option>
                                                <option value="AS">معماری</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab_15_3">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">شماره استخدامی</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                        <label class="col-md-2 control-label">تاریخ استخدام</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">آخرین مدرک تحصیلی</label>
                                        <div class="col-md-4">
                                            <div class="input-icon">
                                                <input class="form-control" placeholder="">
                                            </div>
                                        </div>                                    
                                    </div>
                                </div>
                            </div>
                        </div>
             
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn blue">ذخیره</button>
                        <button type="button" class="btn default">انصراف</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js" type="text/javascript"></script>
<script src="~/content/assets/pages/scripts/components-bootstrap-select.min.js" type="text/javascript"></script>
}
